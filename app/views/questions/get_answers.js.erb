$('#answer_<%= @user_question.id %>').css("display", "none");
<% if @user_question.is_answer == false %>
  $('#answer_<%= @user_question.id %>').html("<%= escape_javascript(render :partial => '/questions/unanswers', :object => [@user_question, @question_answers]) %>");
<% else %>
  $('#answer_<%= @user_question.id %>').html("<%= escape_javascript(render :partial => '/questions/answers', :object => [@user_question, @question_answers]) %>");
<% end %>
$('#answer_<%= @user_question.id %>').attr("class", "load");