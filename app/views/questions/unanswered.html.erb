<%=render 'nav'%>
<div class="m_content">
  <div class="mc_box">
    <div class="mc_menu">
      <ul>
        <li><%=link_to "已经回答","answered?category="  %></li>
        <li class="hover"><%=link_to "等待回答","unanswered"  %></li>
        <li><%=link_to "我的提问","ask?category="  %></li>
        <li><%=link_to "我的回答","answers?category="  %></li>
      </ul>
      <div class="search">
        <div class="search_box"><input id="keywords" name="" type="text"/><button id="btnSearch">search</button></div>
      </div>
      <div class="clear"></div>
    </div>
    <div class="mc_menu_box">
      <%@unanswered_questions.each do |uaq|%>
        <div class="b_bottom">
          <div class="problem_list">
            <div class="problem_box">
              <span class="an_icon01"></span>
              <p><%=uaq.title%></p>
              <p><span class="orange">补充：</span><%=uaq.description%></p>
            </div>
            <div class="userProblem_box">
              <div class="us_pic"><img src="/assets/u01.jpg"/></div>
              <h3><%=uaq.user.name%></h3><!--提问的问题的用户名-->
              <p><%=uaq.created_at.strftime("%Y-%m-%d")%></p><!--日期-->
              <p><%=uaq.created_at.strftime("%H:%M")%></p><!--时间-->
            </div>
          </div>
          <div class="clear"></div>
          <%=form_for uaq.question_answers.build, :url => { :action => :save_answer } do |f| %>
            <div class="problem_list">
              <%=f.hidden_field :user_question_id,:value=>uaq.id%>
              <%= f.text_area  :answer,:class=>"pro_textarea" %>
              <%=f.submit "我要回答",:class=>"pro_btn"%>
            </div>
          <%end%>
        </div>
      <%end%>
      <%=will_paginate @unanswered_questions,:prev_label => '上一页', :next_label => '下一页',:class=>'pageTurn_box'%>
    </div>
  </div>
  <div class="clear"></div>
</div>