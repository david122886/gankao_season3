<div id="pass" class="tishi_box" style="display: none">
  <div class="ts_img"><img src="assets/s_face.png" /></div>
  <div class="ts_text">已经全部掌握了开始检验一下吧！</div>
  <div class="ts_btn_box"><button class="b_btn" onclick="next()">开始检查</button></div>
</div>
<% if $type == UserPlan::CHAPTER_TYPE_NUM[:WORD] %>
  <div class="pt_title">
    <h1>单词学习</h1>
    <span onclick="close_pop()" class="close">关闭</span>
  </div>
  <div class="mc_box">
    <div class="words_func">
      <div id="jquery_jplayer_1" class="jp-jplayer" style="width: 0px; height: 0px; "></div>
      <a id="playAudio" href="javascript:void(0)" title="播放音频" class="play_audio tooltip">播放音频</a>
      <h1><%= @result[:word].name %><span class="fyin">[ <%= @result[:word].phonetic %> ]</span></h1>
      <p><span><%= Word::TYPES[@result[:word].types] %></span><%= @result[:word].ch_mean %></p>
    </div>
    <div class="words_con">
      <% @result[:sentences].each do |sentence|  %>
        <div class="example_list">
          <p><%= sentence.description %></p>
          <p><%= sentence.ch_mean %></p>
        </div>
      <% end  %>
    </div>
    <div class="words_func">
      <a onclick="send_message('/learn/i_have_remember')"  title="我记住了" class="sign tooltip">标记</a>
      <a onclick="send_message('/learn/task_dispatch?category=<%= $category %>')" title="下一题" class="next tooltip">Next</a>
    </div>
  </div>
<% end %>

<script type="text/javascript">

<% if $type == UserPlan::CHAPTER_TYPE_NUM[:WORD] %>
    $(function(){
      $("#jquery_jplayer_1").jPlayer({
        ready: function (event) {
          $(this).jPlayer("setMedia",{
            mp3: "<%= @result[:word].enunciate_url %>"
          }
        );
        },
        swfPath: "../assets/Jplayer.swf",
        supplied: 'mp3',
        vmode:"window",
        solution:"flash, html",
        errorAlerts: false,
        warningAlerts: false
      });

      $("#playAudio").click(function(){
        $("#jquery_jplayer_1").jPlayer("play");

      });
    });
<% end %>
  function next (){
    send_message("/learn/task_dispatch?category=<%= $category %>");
  }
</script>