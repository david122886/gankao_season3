<div class="pt_title">
  <h1>单词学习</h1>
  <div class="pt_time">00:00:00</div>
  <span class="t_number">2/20</span>
  <span class="close">关闭</span>
</div>
<div class="mc_box">
  <div class="words_func">
    <h2>请填入正确的单词。</h2>
    <input type="hidden" id="SID" value="<%= @result[:word] %>" />
  </div>
  <div class="words_con">
    <div class="w_question"><%= @result[:sentence] %></div>
    <input name="" type="text" class="answer_input" onfocus="$('.trueFalse').html('')" />
    <div class="trueFalse"></div>
  </div>
  <div class="words_func">
    <a href="javascript:hedui()" title="点击核对正确答案" class="hedui tooltip">核对</a>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $(".words_ul li").click(function(){
      if($("#SID").attr("value") == $("#I"+this.id).html()){
        //next word
        $.ajax({
          async:true,
          dataType:'script',
          url:"/learn/task_dispatch?type=<%= UserPlan::CHAPTER_TYPE_NUM[:WORD] %>&step=1",
          type:'get'
        })
      }else{
        $("#wrong").show();
        clearInterval(myTime.timeId);
      }
    })
  })
  function callback(){
    $("#timeup").show();
  }
</script>